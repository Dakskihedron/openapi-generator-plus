{
  "name": "openapi-generator-plus-root",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "apply-updates": "pnpx -y npm-check-updates -u && pnpm --recursive exec pnpx -y npm-check-updates -u",
    "build": "pnpm --recursive build",
    "check-updates": "pnpx -y npm-check-updates && pnpm --recursive exec pnpx -y npm-check-updates",
    "clean": "pnpm --recursive clean",
    "clean:node": "pnpm --recursive exec rm -rf node_modules && rm -rf node_modules",
    "link": "pnpm --recursive exec pnpm link --global",
    "lint": "pnpm --recursive lint",
    "release": "pnpm clean && pnpm lint && pnpm build && pnpm test && pnpx changeset publish && pnpm install",
    "release:version": "pnpm changeset version && pnpm install",
    "test": "pnpm --recursive test",
    "test-core": "cd packages/core && pnpm t -- --watch",
    "watch": "pnpm --parallel watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karlvr/openapi-generator-plus.git"
  },
  "author": "Karl von Randow",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/karlvr/openapi-generator-plus/issues"
  },
  "homepage": "https://github.com/karlvr/openapi-generator-plus#readme",
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.179",
    "@types/node": "^17.0.21",
    "@types/pluralize": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.5.1",
    "openapi-types": "^10.0.0",
    "pluralize": "^8.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
