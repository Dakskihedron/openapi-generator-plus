{
  "name": "openapi-generator-plus-root",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "build": "pnpm build --recursive",
    "clean": "pnpm clean --recursive",
    "clean:node_modules": "pnpm --recursive exec rm -rf node_modules",
    "link": "pnpm --recursive exec pnpm link --global",
    "lint": "pnpm lint --recursive",
    "update": "pnpm outdated --recursive",
    "release": "pnpm clean && pnpm lint && pnpm build && pnpm test && pnpx changeset publish && pnpm install",
    "release:version": "pnpm changeset version && pnpm install",
    "test": "pnpm test --recursive",
    "test-core": "cd packages/core && pnpm t -- --watch",
    "watch": "pnpm watch --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karlvr/openapi-generator-plus.git"
  },
  "author": "Karl von Randow",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/karlvr/openapi-generator-plus/issues"
  },
  "homepage": "https://github.com/karlvr/openapi-generator-plus#readme",
  "devDependencies": {
    "@changesets/cli": "^2.18.0",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.10",
    "@types/pluralize": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.3.1",
    "openapi-types": "^9.3.1",
    "pluralize": "^8.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
